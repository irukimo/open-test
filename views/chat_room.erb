      <script>
      $("html, body").animate({ scrollTop: $(document).height() }, "slow");
       // writing
          $("form").on('submit',function(e) {
            $.post('/chat', {msg: $('#msg').val()});
            $('#msg').val(''); $('#msg').focus();
            
            $("html, body").animate({ scrollTop: $(document).height() }, "slow");
            
            e.preventDefault();
