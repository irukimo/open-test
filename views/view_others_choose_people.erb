  <form id="homeform" class="form-horizontal" role="form" action="home" method="post">
      </form>
       <script type="text/JavaScript">
        //<![CDATA[
        function backtohome(){
          var homeform = document.forms["homeform"];
          homeform.submit();
        }

        function viewOthersButton(btnid, coins){
          var obj = this;
          obj.btnelement = document.getElementById(btnid);
          obj.clickedname = btnid;
          obj.coins = parseInt(coins);
          obj.btnelement.onclick = function(){obj.btnClicked();}    
        }

        viewOthersButton.prototype.btnClicked = function(){
          var obj = this;
          if(obj.coins < 200){
            alert("抱歉...你的金幣不夠...");
            return;
          }
          var myform = document.forms["reportform"];
          myform.clickedname.value = obj.clickedname;
          myform.submit();
        }
           //]]>
        </script>

